<?xml version="1.0"?>
<odoo>
    <record id="property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="property_tag__view_tree" model="ir.ui.view">
        <field name="name">property.tag.viwe.tree</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable = "bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- estate.property form view -->
    <record id="estate_property_tag_view_form" model="ir.ui.view">
        <field name="name">property.tag.view.form</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <h1>
                        <group>
                            <field name = "name"/>
                        </group>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
    <!-- estate.property search view -->
    <record id="estate_property_tag_view_search" model="ir.ui.view">
        <field name="name">property.tag.view.search</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>