<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.property_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="80"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Property Sale" string="Property Sale" data-key="aas_property_sale">
                    
                    <h2>Taxes</h2>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="taxes_config">
                            <div class="row mt16">
                                <label for="sale_tax_id" string="Commission and Fees Tax"/>
                                <field name="sale_tax_id" options="{'no_open': True}" />
                            </div>
                        </div>
                    </div>
                    <h2>Commission and Fees</h2>
                    <div class="row mt16 o_settings_container" name="fees_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="commission_fees">
                            <div class="row mt16">
                                <label for="sale_commission" string="Sale Commission"/>
                                <field name="sale_commission" class="oe_inline"/>
                                <span class="oe_inline">%</span>

                            </div>
                            <div class="row mt16">
                                <label for="sale_administrative_fees" string="Sale Administrative Fees"/>
                                <field name="sale_administrative_fees" class="oe_inline"/>
                                <span class="oe_inline">%</span>
                            </div>
                        </div>
                    </div>
                    <h2>Accounts</h2>
                    <div class="row mt16 o_settings_container" name="accounts_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="accounts_config">
                            <div class="row mt16">
                                <label for="sale_comm_admin_account_id" string="Commission and Administrative Fees Account"/>
                                <field name="sale_comm_admin_account_id" options="{'no_open': True}" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_property_sale_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'aas_property_sale', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_property_sale_commission_fees_settings"
        name="Settings"
        parent="configuration_first_level_menu"
        sequence="0"
        action="action_property_sale_config_settings"/>

</odoo>
                    