<odoo>
        <!-- property.unit action window -->
        <record id="bank_account_action" model="ir.actions.act_window">
            <field name="name">Bank Account</field>
            <field name="res_model">bank.account</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    
        <!-- property.unit tree view -->
        <record id="bank_account_view_tree" model="ir.ui.view">
            <field name="name">bank.account.view.tree</field>
            <field name="model">bank.account</field>
            <field name="arch" type="xml">
                <tree>
                    <field name = "name"/>
                    <field name = "bank_account"/>

                    
                </tree>
            </field>
        </record>

        <record id="bank_account_view_form" model="ir.ui.view">
            <field name="name">bank.account.view.form</field>
            <field name="model">bank.account</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                                    <field name = "name" />
                                    <field name = "bank_account"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
</odoo>