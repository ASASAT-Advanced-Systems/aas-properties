<odoo>
    <template id="propertyorder_inherit" inherit_id="aas_property_management.propertyorder">

        <xpath expr="//div[@name='information']" position="after">
            <t t-foreach="docs" t-as="property">

                <div>
                    <span t-if="property.for_sale == True ">
                        <strong>For Sale:  </strong>
                        <span t-field="property.for_sale" />
                    </span>
                    
                </div>
                <div>
                    <span t-if="property.for_sale == True ">
                    <strong>Sale Price:  </strong>
                    <span t-field="property.expected_sale_price" />
                    </span>
                </div>

            </t>
        </xpath>

    
        <xpath expr="//td[@name='owner_name']" position="after">
            <span t-if="property.is_any_sub_for_sale == True ">


            <span t-if="sub_property.for_sale == True ">
                <td>
                    <span t-field="sub_property.expected_sale_price" />
                </td>
            </span>
            <span t-if="sub_property.for_sale == False ">
                <td>
                    <strong>None </strong>
                </td>
                <td>
                    <strong>None </strong>
                </td>
            </span>

                </span>
        </xpath>

        <xpath expr="//th[@name='owner_name']" position="after">
            
            <span t-if="property.is_any_sub_for_sale == True ">

            <t t-foreach="docs" t-as="property">
                    <th>sale Type</th>
                    <th> Expected sale Price</th>
                </t>
                </span>
        </xpath>

    </template>
</odoo>
