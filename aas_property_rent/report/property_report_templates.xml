<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_rent_order">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <div class="container">
                               

                                <h2>

                                    <span t-field="property.name" />
                                </h2>
                                <br></br>
                                <br></br>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="row">

                                            <h2>
                                                <strong>Rent State:  </strong>
                                                <span t-field="property.state" />

                                            </h2>
                                        </div>

                                    </div>
                                    <div class="col-6">
                                        <div>
                                            <span t-field="property.tenant_id" />

                                        </div>
                                        <div>
                                            <span t-field="property.tenant_id.city" />

                                        </div>
                                        <div>
                                            <span t-field="property.tenant_id.street" />

                                        </div>
                                        <div>
                                            <span t-field="property.tenant_id.zip" />

                                        </div>


                                    </div>
                                </div>
                                <br></br>
                                <br></br>
                                
                                <div >
                                    <h5>
                                        <strong>  Tenancy Information  </strong>
                                    </h5>
                                </div>
                                <br></br>

                                <div class="row">
                                    <div class="col-6">
                                        <strong>Tenant:  </strong>
                                        <span t-field="property.tenant_id" />
                                    </div>
                                    <div class="col-6">
                                        <div class="row">
                                            <div >
                                                <strong>&#160; Starting_date: </strong>
                                                <span t-field="property.starting_date" />
                                                
                                            </div>
                                            <strong> &#160;  To &#160;  </strong>
                                                <span t-field="property.end_date" />
                                                
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Payment Type:  </strong>
                                        <span t-field="property.payment_type" />
                                    </div>
                                    <div class="col-6">
                                        <strong>Contract Type: </strong>
                                        <span t-field="property.property_rent_type_related" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Rent Price: </strong>
                                        <span t-field="property.offered_price" />
                                    </div>

                                </div>
                                <br></br>
                                <br></br>
                                <br></br>

                                <div class="row">
                                    <div class="col-6">
                                        <h5>
                                            <strong>Property Information </strong>
                                        </h5>
                                    </div>
                                    <div class="col-6">
                                        <h5>
                                            <strong>Property Address </strong>
                                        </h5>

                                    </div>
                                </div>
                                <br></br>
                                
                                
                                <div class="row">
                                    
                                    <div class="col-6">
                                        <div>
                                            <strong>Property:  </strong>
                                            <span t-field="property.property_id" />
                                        </div>
                                       

                                        <div >
                                            <strong>Property Type:  </strong>
                                            <span t-field="property.property_type_id_related" />
                                        </div>
                                    </div>
                                    <div class="col-6">

                                        <div>

                                            <span t-field="property.street_related" />
    
                                        </div>
                                        <div>
    
                                            <span t-field="property.street2_related" />
    
                                        </div>
                                        <div>
    
                                            <span t-field="property.city_related"  />
                                            <span t-field="property.district_related"/>
                                            <span t-field="property.zip_related"/>

                                        </div>
                                     
                                        <div>
    
                                            <span t-field="property.country_id_related" />
    
                                        </div>
                                    </div>
                                    

                                </div>


                            
                                <br></br>

                                <br></br>


                               
                                

                                <p style="page-break-before:always;"> </p>


                                <h3>
                                    <strong>
                                        Commission, Administrative Fees  and Payments Schedule </strong>
                                </h3>
                                <br></br>

                                <h5>
                                    <strong>
                                        Commission And Fees</strong>
                                </h5>
                                <br></br>
                                 

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Amount</th>
                                            <th>Taxes</th>
                                            <th>Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="payments" t-value="property.mapped('payment_cost_comm_ids')" />
                                        <tr t-foreach="payments" t-as="payment">
                                            <td>
                                                <span t-field="payment.name" />
                                            </td>
                                            <td>
                                                <span t-field="payment.Payment_cost" t-if="payment.Payment_cost != 0 "/>
                                            </td>
                                            <td>
                                                <span t-field="payment.tax" t-if="payment.tax != 0 "/>
                                            </td>
                                            <td>
                                                <span t-field="payment.total_amount" t-if="payment.total_amount != 0"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br></br>
                                <h5>
                                    <strong>
                                        Payment Schedule</strong>
                                </h5>
                                <br></br>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Amount</th>
                                            <th>Taxes</th>
                                            <th>Total Amount</th>
                                            <th>Due Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="payments" t-value="property.mapped('payment_cost_paym_ids')" />
                                        <tr t-foreach="payments" t-as="payment">
                                            <td>
                                                <span t-field="payment.name" />
                                            </td>
                                            
                                            <td>
                                                <span t-field="payment.Payment_cost" t-if="payment.Payment_cost != 0"/>
                                            </td>
                                            <td>
                                                <span t-field="payment.tax" t-if="payment.tax != 0 "/>
                                            </td>
                                            <td>
                                                <span t-field="payment.total_amount" t-if="payment.total_amount != 0"/>
                                            </td>
                                            <td>
                                                <span t-field="payment.Due_Date" />
                                            </td>
                                            <td t-if="payment.Payment_cost != 0 ">
                                                <span t-field="payment.state" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>