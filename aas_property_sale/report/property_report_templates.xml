<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="property_sale_order">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <div class="container">
                               

                                <h2>

                                    <span t-field="property.name" />
                                </h2>
                                <br></br>
                                <br></br>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="row">

                                            <h2>
                                                <strong>Sale State:  </strong>
                                                <span t-field="property.state" />

                                            </h2>
                                        </div>

                                    </div>
                                    <div class="col-6">
                                        <div>
                                            <span t-field="property.customer_id" />

                                        </div>
                                        <div>
                                            <span t-field="property.customer_id.city" />

                                        </div>
                                        <div>
                                            <span t-field="property.customer_id.street" />

                                        </div>
                                        <div>
                                            <span t-field="property.customer_id.zip" />

                                        </div>


                                    </div>
                                </div>
                                <br></br>
                                <br></br>
                                
                                <div >
                                    <h5>
                                        <strong>  Sale Information  </strong>
                                    </h5>
                                </div>
                                <br></br>

                                <div class="row">
                                    <div class="col-6">
                                        <strong>Customer:  </strong>
                                        <span t-field="property.customer_id" />
                                    </div>
                                    <div class="col-6">
                                        <div class="row">
                                            <div >
                                                <strong>&#160;Date: </strong>
                                                <span t-field="property.date" />
                                                
                                            </div>                                                
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Sale Price: </strong>
                                        <span t-field="property.offered_price" />
                                    </div>
                                </div>
                                <br></br>
                                <br></br>
                                <br></br>

                                <div class="row">
                                    <div class="col-6">
                                        <h5>
                                            <strong>Property Information </strong>
                                        </h5>
                                    </div>
                                    <div class="col-6">
                                        <h5>
                                            <strong>Property Address </strong>
                                        </h5>

                                    </div>
                                </div>
                                <br></br>
                                
                                
                                <div class="row">
                                    
                                    <div class="col-6">
                                        <div>
                                            <strong>Property:  </strong>
                                            <span t-field="property.property_id" />
                                        </div>
                                       

                                        <div >
                                            <strong>Property Type:  </strong>
                                            <span t-field="property.property_type_id_related" />
                                        </div>
                                    </div>
                                    <div class="col-6">

                                        <div>

                                            <span t-field="property.street_related" />
    
                                        </div>
                                        <div>
    
                                            <span t-field="property.street2_related" />
    
                                        </div>
                                        <div>
    
                                            <span t-field="property.city_related"  />
                                            <strong>
                                                ,
                                            </strong>
                                            <span t-field="property.district_related"/>
                                            <strong>
                                                ,
                                            </strong>
                                            <span t-field="property.zip_related"/>

                                        </div>
                                     
                                        <div>
    
                                            <span t-field="property.country_id_related" />
    
                                        </div>
                                    </div>
                                    

                                </div>
                                <br></br>
                                <br></br>
                                
                                <br></br>
                                <h5>
                                    <strong>
                                        Commission And Fees</strong>
                                </h5>
                                <br></br>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Amount</th>
                                            <th>Taxes</th>
                                            <th>Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="payments" t-value="property.mapped('payment_cost_comm_ids')" />
                                        <tr t-foreach="payments" t-as="payment">
                                            <td>
                                                <span t-field="payment.name" />
                                            </td>
                                            <td>
                                                <span t-field="payment.Payment_cost" t-if="payment.Payment_cost != 0"/>
                                            </td>
                                            <td>
                                                <span t-field="payment.tax" t-if="payment.tax != 0 "/>
                                            </td>
                                            <td>
                                                <span t-field="payment.total_amount" t-if="payment.total_amount != 0"/>
                                            </td>
                                            <td>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br></br>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>