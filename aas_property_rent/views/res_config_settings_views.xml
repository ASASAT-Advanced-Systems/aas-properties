<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.property_rent</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="80"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Property Rent" string="Property Rent" data-key="aas_property_rent">
                    <h2>Taxes</h2>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="taxes_config">
                            <div class="row mt16">
                                <label for="rent_tax_id" string="Commission and Fees Tax"/>
                                <field name="rent_tax_id" />
                            </div>
                            <div class="row mt16">
                                <label for="rent_payment_tax" string="Rent Payments Tax"/>
                                <field name="rent_payment_tax"  class="oe_inline"/>
                                <span class="oe_inline">%</span>
                            </div>
                        </div>
                    </div>
                    <h2>Commission and Fees</h2>
                    <div class="row mt16 o_settings_container" name="fees_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="commission_fees">
                            <div class="row mt16">
                                <label for="rent_commission" string="Rent Commission"/>
                                <field name="rent_commission" class="oe_inline"/>
                                <span class="oe_inline">%</span>

                            </div>
                            <div class="row mt16">
                                <label for="rent_administrative_fees" string="Rent Administrative Fees"/>
                                <field name="rent_administrative_fees" class="oe_inline"/>
                                <span class="oe_inline">%</span>
                            </div>
                            <div class="row mt16">
                                <label for="rent_service_fees" string="Rent Service Fees"/>
                                <field name="rent_service_fees" class="oe_inline" />
                                <span class="oe_inline">%</span>
                            </div>
                        </div>
                    </div>
                    <h2>Service and Maintainance</h2>
                    <div class="row mt16 o_settings_container" name="service_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="service_config">
                            <div class="row mt16">
                                <label for="can_do_service" string="The company can undertake services and maintainance"/>
                                <field name="can_do_service" />
                            </div>
                        </div>
                    </div>
                    <h2>Accounts</h2>
                    <div class="row mt16 o_settings_container" name="accounts_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="accounts_config">
                            <div class="row mt16">
                                <label for="rent_comm_admin_account_id" string="Commission and Administrative Fees Account"/>
                                <field name="rent_comm_admin_account_id" options="{'no_open': True}" />
                            </div>
                            <div class="row mt16">
                                <label for="rent_service_account_id" string="Service Fees Account" attrs="{'invisible':[('can_do_service', '=', False)]}"/>
                                <field name="rent_service_account_id" options="{'no_open': True}" attrs="{'invisible':[('can_do_service', '=', False)]}" />
                            </div>
                        </div>
                    </div>
                    <h2>Renewal Settings</h2>
                    <div class="row mt16 o_settings_container" name="renewal_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="renewal_setting">
                            <div class="row mt16">
                                <label for="renew_period" string="Add to 'To Renew' Menu Within (days)"/>
                                <field name="renew_period"/>
                            </div>
                        </div>
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>

    <record id="action_property_rent_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'aas_property_rent', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_property_rent_commission_fees_settings"
        name="Settings"
        parent="configuration_first_level_menu"
        sequence="0"
        action="action_property_rent_config_settings"/>

</odoo>
                    